#include <stdio.h>

struct Student {
    int roll;
    char name[20];
    float marks;
};

int main() {
    struct Student s[3];  

    for(int i = 0; i < 3; i++) {
        printf("Enter Roll, Name, Marks for Student %d:\n", i+1);
        scanf("%d %s %f", &s[i].roll, s[i].name, &s[i].marks);
    }


    printf("\nStudent Details:\n");
    for(int i = 0; i < 3; i++) {
        printf("Roll: %d, Name: %s, Marks: %.2f\n", s[i].roll, s[i].name, s[i].marks);
    }

    return 0;
}
